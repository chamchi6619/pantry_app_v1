# Recipe Collection API Keys
# Copy to .env and fill in your keys

# Korea MFDS Food Safety API
# Get key from: http://openapi.foodsafetykorea.go.kr
MFDS_API_KEY=sample_key

# TheMealDB (Commercial tier required for production)
# Get from: https://www.themealdb.com/api.php (Patreon)
THEMEALDB_API_KEY=

# Google Gemini API for intelligent receipt parsing
# Get from: https://aistudio.google.com/app/apikey
# Used only when heuristics fail (~20% of receipts)
# Cost: ~$0.00004 per receipt (Gemini 2.5 Flash)
GEMINI_API_KEY=

# Database Configuration
DATABASE_PATH=data/pantry.db

# Collection Settings
RATE_LIMIT_DEFAULT=1.0
MAX_CONCURRENT_COLLECTORS=3

# SQLite Settings (for WAL mode)
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_CACHE_SIZE=-64000

# Logging
LOG_LEVEL=INFO
LOG_RAW_RESPONSES=true
RAW_DATA_DIR=data/raw

# Security
USER_AGENT=PantryPal-Collector/1.0 (Educational; +https://pantrypal.app/bot)